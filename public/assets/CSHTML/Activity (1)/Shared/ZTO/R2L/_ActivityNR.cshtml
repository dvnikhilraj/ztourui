                                <div class="col-sm-6">
                                    <span style="font-weight:bold">ADULTS</span> <span class="sub" style="font-size: 10px;">12+ Yrs</span>
                                    <div range-spinner
                                         range-min="1"
                                         range-step="1"
                                         range-max="4"
                                         range-default-value="Adultcount"
                                         range-decimal-precision="1"
                                         range-model="Adultcount"
                                         accept-decimal=false
                                         id-of-field="adult">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <span style="font-weight:bold">CHILD</span> <span class="sub" style="font-size: 10px;">2-12 Yrs</span>
                                    <div range-spinner
                                         range-min="0"
                                         range-step="1"
                                         range-max="3"
                                         range-default-value="Childcount"
                                         range-decimal-precision="1"
                                         range-model="Childcount"
                                         accept-decimal=false
                                         name-of-field="Child">
                                    </div>
                                </div>
                            </div>

                            <div class="row" style="padding: 0px 15px 8px 15px;" ng-show="Childcount >= 1">
                                <div class="col-sm-6">
                                    <span class="sub" style="font-size: 9px;margin:0">  AGE CHILD 1</span>
                                    <div range-spinner
