<div class="loading-page" ng-show="showWaiting" style="width: 100%;height: 100%;position: absolute;z-index: 9999;background: #fff;top: 0;left: 0;min-height: 600px;display:none">
    <div class="loading-page-wrapper">
        <div class="container">
            <h1 class="block">
                We are Searching for the Activities
            </h1>
            <div class="col-sm-10 col-md-9 col-lg-12">
                <img src="@Url.Content("~/Images/TI/Activities/sightseeing_Waiting.jpg")" width="768" height="264">
            </div>
            <div class="col-sm-10 col-md-9 col-lg-12">
                <div class="pageloader">
                    <div class="loader"></div>
                    <div class="loader-section left"></div>
                    <div class="loader-section right"></div>
                </div>
            </div>
            <h3 class="block">
                Please wait while your request is being processed for
            </h3>
            <div class="col-lg-10">
                <div class="col-lg-2">&nbsp;</div>
                <div class="col-lg-3 col-md-5 col-sm-4">
                    <div class="row">
                        <h4>City</h4>
                    </div>
                    <div class="row">
                        {{ActivityCityName}}
                    </div>
                </div>
                <div class="col-lg-2 col-md-5 col-sm-4" style="border-left:1px solid #ccc;border-right:1px solid #ccc;">
                    <div class="">
                        <div class="row">
                            <h4>From-Date</h4>
                        </div>
                        <div class="row">
                            {{formatDate(ActivityFromDate) | date :'dd-MMM-yyyy'}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-2 col-sm-3" style="border-right:1px solid #ccc">
                    <div class="bdr_ryt0">
                        <div class="row">
                            <h4>To-Date</h4>
                        </div>
                        <div class="row">
                            {{formatDate(ActivityToDate) | date :'dd-MMM-yyyy'}}
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-2 col-sm-3">
                    <div class="bdr_ryt0">
                        <div class="row">
                            <h4>Occupancy</h4>
                        </div>
                        <div class="row">
                            {{NoofNight}} Nights, {{Adultcount}} Adults, {{Childcount}} Child
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>