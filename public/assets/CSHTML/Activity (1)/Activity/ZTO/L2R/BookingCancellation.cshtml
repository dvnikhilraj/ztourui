@model BookingObject.BookingCancellationResponse
@{Layout = null;}
<script>
    var youwerelookingfor = "@LanguageResources.Resources.Yourbookinghasbeencancelledsuccessfully"
</script>

<div class="seperator margin-top-10-xs">
    <h4>@LanguageResources.Resources.Areyousureyouwanttocancelthisbooking</h4>
</div><br />
<div class="form-group">
    <p><i class="fas fa-hand-point-right"></i>&nbsp;&nbsp;@LanguageResources.Resources.YouareplacingacancellationrequestforbookingReference <span style="color:#07a5d8">@Model.ResponseBody.Cancellation.ReservationRef</span></p>
    <p><i class="fas fa-hand-point-right"></i>&nbsp;&nbsp;@LanguageResources.Resources.Pleasenotethatyouwillbechargedofamount <span style="color:#07a5d8;"><b>@Model.ResponseBody.Cancellation.Currency @Model.ResponseBody.Cancellation.CancellationCharge</b></span> @LanguageResources.Resources.whichisthepenaltyforcancellation.</p>
</div>
<div class="form-group" style="text-align:right">
    <span style="font-size:20px;display:none;color:red !important" id="cancelmsgstatus">&nbsp;&nbsp; <i class="icon soap-icon-check-1" style="vertical-align:baseline !important;"></i> <label style="margin-bottom:0px"><span id="cancelmsg" class="alertMsg" style="margin-bottom:0px"></span></label></span>
</div>
<div style="overflow:hidden; text-align:center" id="txtright">
    <a href="@Url.Content("~/General/MyBooking?refno=" + @Model.ResponseBody.Cancellation.ReservationRef)" id="btnNo" class="button btn-default">@LanguageResources.Resources.No</a>
    <a href="@Url.Content("~/General/MyBooking?refno=" + @Model.ResponseBody.Cancellation.ReservationRef)" id="btnNu" class="button btn-default" style="width:33%;display: none">@LanguageResources.Resources.Close</a>
    <button type="submit" id="btnCancelled" class="button btn-default" onclick="GetCancellationStatus('@Model.ResponseBody.Cancellation.ClientId', '@Model.ResponseBody.Cancellation.ReservationRef', '@Model.ResponseBody.Cancellation.ServiceProductId', 'SSG')">@LanguageResources.Resources.Yes</button>
    <div id="cancellationloader" style="display:none;">
        <div class="loaderlogin"></div>
    </div>
</div>
