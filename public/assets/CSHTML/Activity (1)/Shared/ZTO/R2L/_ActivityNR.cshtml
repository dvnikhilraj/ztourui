                                         range-model="Child2Age"
                                         accept-decimal=false
                                         name-of-field="Child2Age">
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="padding: 0px 15px 8px 15px;" ng-show="Childcount >= 1">
                                <div class="col-sm-6" ng-show="Childcount==3">
